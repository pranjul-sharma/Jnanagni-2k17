<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_dash"
    tools:context="com.example.pranjul.materialtest.DashBoardActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarDashboard"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_dashboard"
            android:background="@color/cardview_dark_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme"/>
    </android.support.design.widget.AppBarLayout>

           <TextView
           android:text="First Name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
               android:layout_below="@id/appbarDashboard"
           android:layout_marginTop="31dp"
           android:textSize="30sp"
               android:paddingStart="20sp"
           android:textColor="@color/colorAccent"
           android:id="@+id/textView2" />
       <TextView
           android:text="Last Name"
           android:layout_marginTop="31dp"
           android:layout_below="@id/appbarDashboard"
           android:layout_marginStart="20sp"
           android:textSize="30sp"
           android:textColor="#333"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/textView3"
           android:layout_toRightOf="@id/textView2"
           />

    <TextView
        android:text="email"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_below="@id/textView2"
        android:paddingStart="20sp"
        android:id="@+id/textView4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton2"
            android:layout_marginTop="31dp"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:text="your registered events"
            android:layout_below="@id/textView4"
            android:id="@+id/button2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reg_list_view"
        android:paddingStart="14sp"
        android:layout_below="@id/button2"
        android:paddingRight="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        app:elevation="20sp"
        android:id="@+id/button_event"
        app:backgroundTint="#333"
        android:src="@android:drawable/ic_media_play"
        app:fabSize="auto"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
